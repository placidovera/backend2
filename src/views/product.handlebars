<div class="app-container">

  <!-- PRODUCTO -->
  <div class="products-grid">
    <div class="product-card">
      <div class="product-info">
        <div class="product-title">{{producto.title}}</div>
        <div class="product-meta">
          <span class="price">$ {{producto.price}}</span>
          <span class="category">{{producto.category}}</span>
        </div>
      </div>

      <button class="add-to-cart" data-id="{{producto._id}}">
        Agregar al carrito
      </button>
    </div>
  </div>

  <!-- CARRITO -->
  <div class="cart-panel">
    <div class="cart-header">
      <span class="cart-title">ðŸ›’ Carrito</span>
    </div>

    <div id="cart-items" class="cart-items"></div>

    <button id="delete-cart" class="clear-cart">
      Vaciar carrito
    </button>
  </div>

</div>

